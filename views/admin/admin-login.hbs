<section>
    <div class="text-head text-center">
        <h2 style="margin-top: 50px;">Admin Login</h2>
    </div><br><br>
    <div class="container col-10 col-md-4 mt-5 "
        style="background-color:#f1f2f3; height: 301px; box-shadow: 3px 1px 7px 1px #888888;">
        <form action="admin/adminlogin" method="POST" style="background-image: url('/images/about.png'); ">
            <div class="form-group pt-3">
                <label for="name">User Name</label>
                <input style="border-color:#36b9cc;border-width: 2px;" type="name" id="adminname" name="adminname"
                    class="form-control" id="email" required>
            </div>
            <div class="form-group">
                <label class="mt-3" for="pwd">Password</label>
                <input style="border-color:#36b9cc;border-width: 2px;" type="password" name="password"
                    class="form-control" id="pwd" required>
            </div>
            <center><button type="submit" class=" mt-4 btn btn-default"
                    style="background-color:#4e73df; color: white;">Login</button></center>
        </form>

    </div>
</section>