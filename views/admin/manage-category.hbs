<section >
    <div class="container">
         <div>
    <h2 class="text-center m-4"> Manage Category</h2>
</div>
        <div class="row">
            <div class="col-md-12">
                <div class="pb-5 my-auto text-center mt-4">
                    <a class="btn btn-success" href="/admin/create-category" style="color: white;">Create Category</a>
                    <a class="ml-5 btn btn-danger" href="/admin/manage-category" style="color: white;">Manage Category</a>
                </div>
                
                <table class="table mt-3" style=" background-color: #fff; box-shadow: 3px 1px 7px 1px #888888;">
                    <thead style="background-color: #4e73df; color: white;">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Category</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    {{#each category}}
                    <tbody>
                        <tr>
                            <th scope="row">{{this._id}}</th>
                            <td class="text-uppercase ">{{this.category}}</td>
                            <td style="color: white;"> <a style="font-size: 14px;" class="btn btn-info">Edit</a>
                                <a class="btn btn-danger" style="font-size: 14px;">Delete</a>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>

                
            </div>
        </div>
    </div>
</section>

<style>
    tr:hover{
        box-shadow: 1px 0px 22px -1px #888888;
        
    }
</style>