<section>
    <div>
    <h2 class="text-center m-4"> Manage Brands</h2>
</div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="pb-5 my-auto text-center mt-3">
                    <a class="btn btn-success" href="/seller/create-brands" style="color: white;">Create Brands</a>
                    <a class="ml-5 btn btn-danger" href="/seller/manage-brands" style="color: white;">Manage Brands</a>
                </div>
                
                <table class="table" style=" background-color: #fff; box-shadow: 3px 1px 7px 1px #888888;">
                    <thead style="background-color: #4e73df; color: white;">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Brand</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    {{#each brands}}
                    <tbody>
                        <tr>
                            <th scope="row">{{this._id}}</th>
                            <td class="text-uppercase ">{{this.brandname}}</td>
                            <td style="color: white;"> <a style="font-size: 14px;" class="btn btn-info">Edit</a>
                                <a class="btn btn-danger" style="font-size: 14px;">Delete</a>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>

                
            </div>
        </div>
    </div>
</section>